<?xml version="1.0" encoding="ISO-8859-1" ?>
<database name="postgres"
          defaultIdMethod="native">

    <table name="publisher" description="Publisher Table">
        <column
                name="publisher_id"
                required="true"
                primaryKey="true"
                type="INTEGER"
                description="Publisher Id"/>
        <column
                name="name"
                required="true"
                type="VARCHAR"
                size="128"
                description="Publisher Name"/>
    </table>
    <table name="author" description="Author Table">
        <column
                name="author_id"
                required="true"
                primaryKey="true"
                type="INTEGER"
                description="Author Id"/>
        <column
                name="first_name"
                required="true"
                type="VARCHAR"
                size="128"
                description="First Name"/>
        <column
                name="last_name"
                required="true"
                type="VARCHAR"
                size="128"
                description="Last Name"/>
    </table>
    <table name="book" description="Book Table">
        <column
                name="book_id"
                required="true"
                primaryKey="true"
                type="INTEGER"
                description="Book Id"/>
        <column
                name="title"
                required="true"
                type="VARCHAR"
                size="255"
                description="Book Title"/>
        <column
                name="isbn"
                required="true"
                type="VARCHAR"
                size="24"
                javaName="ISBN"
                description="ISBN Number"/>
        <column
                name="publisher_id"
                required="true"
                type="INTEGER"
                description="Foreign Key Publisher"/>
        <column
                name="author_id"
                required="true"
                type="INTEGER"
                description="Foreign Key Author"/>
        <foreign-key foreignTable="publisher">
            <reference
                    local="publisher_id"
                    foreign="publisher_id"/>
        </foreign-key>
        <foreign-key foreignTable="author">
            <reference
                    local="author_id"
                    foreign="author_id"/>
        </foreign-key>
    </table>
</database>